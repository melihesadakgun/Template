{
  "name": "proje-template",
  "version": "1.0.0",
  "description": "ISO 12207, 27001, 5055, 29119 standartlarına uyumlu yazılım projesi şablonu",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node src/index.js",
    "build": "tsc",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src tests --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint src tests --ext .js,.ts,.jsx,.tsx --fix",
    "prettier": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,md}\" \"tests/**/*.{js,ts}\"",
    "prettier:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,md}\" \"tests/**/*.{js,ts}\"",
    "format": "npm run prettier && npm run lint:fix",
    "quality:check": "npm run lint && npm run prettier:check && npm run test",
    "coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "setup": "npm install && npm run build",
    "clean": "rm -rf dist coverage node_modules"
  },
  "keywords": [
    "ISO 12207",
    "ISO 27001",
    "ISO 5055",
    "ISO 29119",
    "SonarCloud",
    "Quality Gate",
    "Test Coverage"
  ],
  "author": "Proje Ekibi",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts",
      "!src/**/*.interface.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary",
      "html",
      "json-summary"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "reporters": [
      "default"
    ]
  }
}
